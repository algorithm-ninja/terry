{
    "name": "terry",
    "private": true,
    "scripts": {
        "start": "concurrently --kill-others 'yarn-or-npm start:shared' 'yarn-or-npm start:frontend'",
        "start-nobrowser": "concurrently --kill-others 'yarn-or-npm start:shared' 'yarn-or-npm start:frontend-nobrowser'",
        "start-bare": "concurrently --kill-others 'yarn-or-npm start:shared' 'yarn-or-npm start:frontend-bare'",
        "start:shared": "lerna run start --scope @terry/shared",
        "start:frontend": "cd packages/frontend && yarn-or-npm start",
        "start:frontend-nobrowser": "cd packages/frontend && yarn-or-npm start-nobrowser",
        "start:frontend-bare": "cd packages/frontend && yarn-or-npm start-bare",
        "setup": "lerna bootstrap"
    },
    "devDependencies": {
        "concurrently": "^3.5.1",
        "lerna": "^3.10.2",
        "yarn-or-npm": "^3.0.1"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    }
}